@model SelfServiceViewModel

@{
    ViewBag.Title = "Exclusão de Comissões Self Service";
}

@{
    string confirmMessage = "Tem certeza que deseja excluir essa comissão self service ?";
}


<h1 class="headerForm">@ViewBag.Title</h1>
<p class="errorMessage">@ViewBag.ErrorMessage</p>


<p class="confirmMessage">@confirmMessage</p>

<div>   

    <div>
        <p><label class="caption">@Html.DisplayNameFor(model => model.Cargo.NomeCargo)</label><label>@Html.DisplayFor(model => model.Cargo.NomeCargo)</label></p>
        <p><label class="caption">@Html.DisplayNameFor(model => model.Loja.NomeLoja)</label><label>@Html.DisplayFor(model => model.Loja.NomeLoja)</label></p>
        <p><label class="caption">@Html.DisplayNameFor(model => model.SelfService.DT_INI)</label><label>@Html.DisplayFor(model => model.SelfService.DT_INI)</label></p>
        <p><label class="caption">@Html.DisplayNameFor(model => model.SelfService.DT_FIM)</label><label>@Html.DisplayFor(model => model.SelfService.DT_FIM)</label></p>
        <p><label class="caption">@Html.DisplayNameFor(model => model.SelfService.STATUS) </label>
                                    @if (Model.SelfService.STATUS == "A"){ <label>Ativo</label>}else{<label>Inativo</label>}</p>
    </div>

    <p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            
            <input type="submit" value="Excluir" class="botoesCategoria" />                    
            
            @Html.ActionLink("Voltar", "SelfServiceIndex", "SelfService", new { @statusSearchString = "A" }, new { @class = "botoesCategoria" })
        }
    </p>
</div>
