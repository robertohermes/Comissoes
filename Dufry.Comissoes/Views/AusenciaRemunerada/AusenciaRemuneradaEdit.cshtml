@model AusenciaRemuneradaViewModel

@{
    ViewBag.Title = "Edição de Ausência Remunerada";
}

<h1 class="headerForm">@ViewBag.Title</h1>


@using (Html.BeginForm()) 
{
    @*@Html.AntiForgeryToken()*@

    <div class="editorCategoria">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AusenciaRemunerada.ID_AUSENCIA_REMUNERADA)
        @*<p>
            @Html.LabelFor(model => model.AusenciaRemunerada.COLABORADORKEY)
            @Html.DropDownListFor(model => model.AusenciaRemunerada.COLABORADORKEY, Model.ColaboradoresSelectListItem, "--- Selecione ---", new { @class = "autocomplete-combobox", @style = "padding-left: 7px;!important" })
            @Html.ValidationMessageFor(model => model.AusenciaRemunerada.COLABORADORKEY, String.Empty, new { @style = "padding-left: 40px;!important" })
        </p>*@
        <p style="display: inline-block">
            @Html.LabelFor(model => model.NomeCompleto)
            <label style="text-align: left">@Html.DisplayFor(model => model.NomeCompleto)</label>
        </p>
        <p>
            @Html.LabelFor(model => model.AusenciaRemunerada.DESC_AUSENCIA)
            @Html.EditorFor(model => model.AusenciaRemunerada.DESC_AUSENCIA)
            @Html.ValidationMessageFor(model => model.AusenciaRemunerada.DESC_AUSENCIA, String.Empty, new { @style = "padding-left: 10px;!important" })
        </p>
        <p>
            @Html.LabelFor(model => model.AusenciaRemunerada.DT_INI)
            @Html.TextBoxFor(model => model.AusenciaRemunerada.DT_INI, null, new { @class = "dp", @Value = Model.AusenciaRemunerada.DT_INI.ToString("dd/MM/yyyy") })
            @Html.ValidationMessageFor(model => model.AusenciaRemunerada.DT_INI, String.Empty, new { @style = "padding-left: 10px;!important" })
        </p>
        <p>
            @Html.LabelFor(model => model.AusenciaRemunerada.DT_FIM)
            @Html.TextBoxFor(model => model.AusenciaRemunerada.DT_FIM, null, new { @class = "dp", @Value = Model.AusenciaRemunerada.DT_FIM.ToString("dd/MM/yyyy") })
            @Html.ValidationMessageFor(model => model.AusenciaRemunerada.DT_FIM, String.Empty, new { @style = "padding-left: 10px;!important" })
        </p>

        <p>
            @Html.LabelFor(model => model.AusenciaRemunerada.STATUS)
            @Html.RadioButtonFor(model => model.AusenciaRemunerada.STATUS, "A") Ativo
            @Html.RadioButtonFor(model => model.AusenciaRemunerada.STATUS, "I") Inativo
            @Html.ValidationMessageFor(model => model.AusenciaRemunerada.STATUS, String.Empty, new { @style = "padding-left: 127px;!important" })
        </p>

    </div>

    <input type="submit" id="salvaAusenciaRemunerada" value="Salvar" class="botoesCategoria" />
    @Html.ActionLink("Voltar", "AusenciaRemuneradaIndex", "AusenciaRemunerada", new { @statusSearchString = "A" }, new { @class = "botoesCategoria" })

}


@section Scripts {
    <script type="text/javascript">
        $(function () {
            $('.dp').datepicker({
                showAnim: "scale",
                showOptions: {
                    origin: ["top", "right"]
                }
            });
        });

        $(document).ready(function () {
            $('.dp').mask('00/00/0000', { 'translation': { 0: { pattern: /[0-9]/ } } });
            //$('.decimal').mask('000,0000', { reverse: true });

            $("input[name='AusenciaRemunerada.DT_FIM']").rules("add", {
                DateGtEq: $("input[name='AusenciaRemunerada.DT_INI']"),
                messages: { DateGtEq: "A data final da vigência deve ser maior que a data inicial" }
            });

        });

        //using combobox() function of jquery ui autocomplete hides the <select> tag generated by the DropDownListFor() 
        //method and renders its own html.
        //By default, hidden form controls are not validated by jquery.validate. This behaviour can be modified using the code above,
        //which will validate all hidden form controls, or to keep ignoring all hidden elements except your select
        $.validator.setDefaults({
            //validate all hidden form controls - ignore: [] 
            //ignore all hidden elements except those who are listed:
            ignore: ':hidden:not(#AusenciaRemunerada_COLABORADORKEY)'
        });

    </script>
}



