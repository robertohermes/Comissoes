@model Categoria

@{
    ViewBag.Title = "Exclusão de Categorias";
}

<h1 class="headerForm">@ViewBag.Title</h1>
<p class="errorMessage">@ViewBag.ErrorMessage</p>
<p class="confirmMessage">Tem certeza que deseja excluir essa categoria?</p>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Descrição:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DESC_CATEGORIA)
        </dd>


    </dl>

    @using (Html.BeginForm()) {
        @*@Html.AntiForgeryToken()*@

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "CategoriaIndex")
        </div>
    }
</div>
